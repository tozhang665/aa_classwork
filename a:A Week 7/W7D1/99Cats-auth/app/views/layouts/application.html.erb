<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if logged_in?%>
        <h3> Hello, <%= current_user.user_name %> </h3>
         <form action="<%= sessions_url %>" method='post'>
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Logout">
        </form>
      <% else %>
        <a href="<%= new_sessions_url %>"> Login </a>
    <% end %>
    

    <%= yield %>


    
    <br>
    <a href="<%= cats_url%>">Index</a>
  </body>
</html>
